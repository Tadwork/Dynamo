<UserControl x:Class="Dynamo.Elements.dynNode"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:local="clr-namespace:Dynamo.Elements"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:dropShadow="clr-namespace:Microsoft.Windows.Themes;assembly=PresentationFramework.Aero"
    Height="300" 
    Width="160" 
    Name="topControl" 
    Loaded="topControl_Loaded" 
    KeyUp="OnKeyUp" 
    PreviewKeyUp="OnPreviewKeyUp">
   <UserControl.Resources>
      <local:MarginConverter x:Key="MarginConverter" />
   </UserControl.Resources>
   <Grid Name="grid">
      <Grid.ContextMenu>
         <ContextMenu Name="MainContextMenu" ContextMenuOpening="MainContextMenu_ContextMenuOpening">
            <MenuItem Name="deleteElem_cm" Header="Delete" Click="deleteElem_cm_Click" />
         </ContextMenu>
      </Grid.ContextMenu>
      <Grid Name="gridLeft" 
            Margin="-7,5,0,5"
            HorizontalAlignment="Left"
            IsHitTestVisible="True" 
            Background="Transparent"
            Canvas.ZIndex="90">
         <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20"/>
            <ColumnDefinition Width="Auto"/>
         </Grid.ColumnDefinitions>
         
      </Grid>
      <Grid Name="gridRight" 
              HorizontalAlignment="Right" 
              VerticalAlignment="Stretch"
              Margin="0,5,-7,5" 
              Width="Auto" 
              IsHitTestVisible="True" 
              Background="Transparent"
              Canvas.ZIndex="90">
         <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="20"/>
         </Grid.ColumnDefinitions>
      </Grid>
      <Canvas Canvas.Left="0" 
                Canvas.Top="0" 
                Name="elementCanvas" 
                Margin="0,0,0,0">
         <Rectangle HorizontalAlignment="Right" 
                       Canvas.Left="0"
                       Canvas.Top="0"
                       Width="{Binding ElementName=topControl, Path=Width}"
                       Height="{Binding ElementName=topControl, Path=Height}"
                       Name="elementRectangle" 
                       RadiusX="10" 
                       RadiusY="10"
                       Canvas.ZIndex="90"
                       Stroke="Black" StrokeThickness="2">
            <Rectangle.Effect>
               <DropShadowEffect Opacity="0" />
            </Rectangle.Effect>
            <Rectangle.Fill>
               <LinearGradientBrush StartPoint="0,0" EndPoint="0,1" >
                  <GradientStop Color="Yellow" Offset="0.0" />
                  <GradientStop Color="Orange" Offset="1" />
               </LinearGradientBrush>
            </Rectangle.Fill>
         </Rectangle>
            <!--<Rectangle HorizontalAlignment="Right" 
                       Canvas.Left="0"
                       Canvas.Top="0"
                       Width="{Binding ElementName=topControl, Path=Width}"
                       Height="{Binding ElementName=topControl, Path=Height}"
                       Name="elementBorder" 
                       RadiusX="10" 
                       RadiusY="10"
                       Stroke="#FF555555"
                       StrokeThickness="2"
                       Canvas.ZIndex="90" 
                       IsHitTestVisible="False">
            </Rectangle>-->
            <Rectangle HorizontalAlignment="Right" 
                       Canvas.Left="0"
                       Canvas.Top="2"
                       Width="{Binding ElementName=topControl, Path=Width}"
                       Height="20" 
                       Name="elementShine" 
                       RadiusX="10" 
                       RadiusY="10"
                       Canvas.ZIndex="91">
            <Rectangle.Fill>
               <SolidColorBrush Opacity=".25" Color="white" />
            </Rectangle.Fill>
         </Rectangle>
         <TextBlock  Height="Auto" 
                     Name="nickNameBlock" 
                     VerticalAlignment="Center" 
                     HorizontalAlignment="Left"
                     Text="{Binding NickName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                     Margin="{Binding RelativeSource={RelativeSource Self}, Path=ActualHeight, Converter={StaticResource MarginConverter}, Mode=OneWay}"
                     FontFamily="Calibri"
                     FontSize="15" 
                     FontWeight="Normal" 
                     TextAlignment="Center" 
                     IsHitTestVisible="False" 
                     Canvas.ZIndex="99" 
                     Width="{Binding ElementName=grid, Path=ActualWidth}"
                     MaxWidth="{Binding ElementName=grid, Path=ActualWidth}"
                     TextWrapping="Wrap"
                     Background="Transparent" FontStyle="Normal">
            <!--<TextBox.Background>
               <SolidColorBrush />
            </TextBox.Background>-->
            <!-- <TextBlock.Effect>
               <DropShadowEffect ShadowDepth="0" Color="WhiteSmoke" BlurRadius="4" />
            </TextBlock.Effect> -->
         </TextBlock>
      </Canvas>
      <Grid Name="inputGrid"
              VerticalAlignment="Stretch"
              HorizontalAlignment="Stretch"
              Height="Auto"
              Width="Auto"
              Margin="45,5,45,5"/>
   </Grid>
</UserControl>
